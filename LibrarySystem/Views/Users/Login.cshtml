@model User

<div class="flex-container">
    <div class="cardLog">
        <h1 class="text-center log">Sign In</h1>
        <form method="post">
            <div class="row">
                <label asp-for="Email" class="col-5"></label>
                <input asp-for="Email" class="col-8" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="row">
                <label asp-for="Password" class="col-5"></label>
                <input asp-for="Password" class="col-8" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <label style="color:red">@ViewBag.Error</label>
            <div class="text-center">
                <button type="submit" class="btn btn-primary" style="color: white">Sign In</button>
            </div>
        </form>
    </div>
</div>