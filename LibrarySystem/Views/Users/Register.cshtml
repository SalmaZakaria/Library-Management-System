@model User

<form enctype="multipart/form-data" method="post">
    <div class="flex-container">
        <div class="cardReg">
            <h1 class="text-center log">Register</h1>
            <div class="row">
                <label asp-for="FullName" class="col-5"></label>
                <input asp-for="FullName" class="col-8" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="row">
                <label asp-for="Age" class="col-5"></label>
                <input asp-for="Age" class="col-8" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="row">
                <label asp-for="PhoneNumber" class="col-5"></label>
                <input asp-for="PhoneNumber" class="col-8" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="row">
                <label asp-for="BookID" class="col-5"></label>
                <select asp-for="BookID" asp-items="@ViewBag.AllBooks" class="col-8">
                    <option disabled selected>Select...</option>

                </select>
            </div>
            <div class="row">
                <label asp-for="ImageName" class="col-5"></label>
                <input asp-for="ImageFile" class="img" accept="image/*" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="row">
                <label asp-for="Email" class="col-5"></label>
                <input asp-for="Email" class="col-8" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="row">
                <label asp-for="ConfirmEmail" class="col-5"></label>
                <input asp-for="ConfirmEmail" class="col-8" />
                <span asp-validation-for="ConfirmEmail" class="text-danger"></span>
            </div>
            <div class="row">
                <label asp-for="Password" class="col-5"></label>
                <input asp-for="Password" class="col-8" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="row">
                <label asp-for="ConfirmPassword" class="col-5"></label>
                <input asp-for="ConfirmPassword" class="col-8" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary" style="color: white">Register</button>
            </div>

        </div>
    </div>
</form>