@model Book
@using System.Globalization;

<h1 class="text-center">Deletion</h1>
<form enctype="multipart/form-data" method="post">
    <div class="flex-container">
        <div class="cardbo">
            <dl>
                <dd>
                    <div class="text-center">
                        <img src=@("~/images/" + Model.ImageName) width="250" asp-append-version="true" />
                    </div>
                </dd>
                <dt>@Html.DisplayNameFor(b => b.Name)</dt>
                <dd>@Model.Name</dd>
                <dt>@Html.DisplayNameFor(b => b.AuthorName)</dt>
                <dd>@Model.AuthorName</dd>
                <dt>@Html.DisplayNameFor(b => b.Category)</dt>
                <dd>@Model.Category</dd>
                <dt>@Html.DisplayNameFor(e => e.Count)</dt>
                <dd>@Model.Count</dd>
                <dt>@Html.DisplayNameFor(b => b.Price)</dt>
                <dd>@Model.Price.ToString("C", CultureInfo.CreateSpecificCulture("en-eg"))</dd>

            </dl>
            <div class="text-center">
                <button type="submit" class="btn btn-danger" style="color: white">Delete</button>
            </div>
            <br />
        </div>
    </div>
</form>
